//- Network & CIDR IP Details 
extends layout/master.pug 

block jumbotron
    //- Changing the jumbotron into heading 1 
    h1 Available IPs from Network Address: 
       b #{NetworkAddress} 
       | and Count: #{IPCount}

block content 
    table(id="ip-detail" class="table table-striped table-bordered" cellspacing="0" width="100%")
        thead
            tr
                th IP 
        tfoot
            tr
                th IP
        tbody
            each ip in ip_list
                tr
                    td= ip


block scripts 
    script(src="../../js/jquery-3.2.1.min.js")
    script(src="../../js/bootstrap.min.js")
    script(src="../../js/jquery.dataTables.min.js")
    script(src="../../js/dataTables.bootstrap.min.js")
    script(src="../../js/script.js")