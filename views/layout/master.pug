//- https://datatables.net/examples/styling/bootstrap.html [Use dataTable]

html
    head 
        title #{title_placeholder} 
        //- Stylesheet
        link(href="/css/bootstrap.css" rel="stylesheet")
        link(href="/css/dataTables.bootstrap.min.css" rel="stylesheet")
    body

        //- Navbar Code 
        nav(class="navbar navbar-default")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
                        span(class="sr-only") Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="#") IP Distribution

                div(class="collapse navbar-collapse" id="navbar-collapse")
                    ul(class="nav navbar-nav")
                        li(class="active")
                            a(href="#") [ Add Link Here ]

        //- Container Code 
        div(class='container')
            block jumbotron
                div(class='jumbotron')
                    h1 IP Distribution 
                    p A Node app that is used to collect IP stats 
                    p
                        a(class="btn btn-primary btn-lg" href="#" role="button") Learn More 
            block content 

        //- JS files 
        block scripts 
            script(src="js/jquery-3.2.1.min.js")
            script(src="js/bootstrap.min.js")
            script(src="js/jquery.dataTables.min.js")
            script(src="js/dataTables.bootstrap.min.js")
            script(src="js/script.js")